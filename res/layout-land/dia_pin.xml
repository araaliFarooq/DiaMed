<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bckgrnd"
>
<AbsoluteLayout
	android:id="@+id/widget0"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="center"
	android:gravity="center"
	android:paddingLeft="90dp"
	>
<TextView
	android:id="@+id/widget32"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="New PIN"
	android:layout_x="37dp"
	android:layout_y="127dp" />
<EditText
android:hint="Enter Pin"
android:password="true"
	android:id="@+id/pin"
	android:layout_width="144dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="136dp"
	android:layout_y="118dp" />
<TextView
	android:id="@+id/widget34"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Confirm"
	android:layout_x="35dp"
	android:layout_y="209dp" />
<EditText
android:hint="Confirm Pin"
android:password="true"
	android:id="@+id/confirm"
	android:layout_width="152dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="131dp"
	android:layout_y="197dp" />
<TextView
	android:id="@+id/widget38"
	android:layout_width="87dp"
	android:layout_height="wrap_content"
	android:text="Set PIN"
	android:layout_x="124dp"
	android:layout_y="11dp" />
<Button android:id="@+id/set" android:layout_width="90dp" android:text="SAVE" android:layout_height="wrap_content" android:layout_x="35dp" android:layout_y="324dp"></Button>
<ToggleButton 
android:checked="true"
android:id="@+id/toggleButton1" android:text="ToggleButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_x="133dp" android:layout_y="325dp"></ToggleButton>
<Button android:id="@+id/cancel2" android:layout_width="97dp" android:text="Cancel" android:layout_height="wrap_content" android:layout_x="198dp" android:layout_y="324dp"></Button>
</AbsoluteLayout>
</ScrollView>
