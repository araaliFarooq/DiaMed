<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:background="@drawable/download"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent"

>
<AbsoluteLayout
android:gravity="center"
android:layout_gravity="center"
 android:paddingLeft="50dp"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView
	android:id="@+id/widget32"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="New PIN"
	android:layout_x="37dp"
	android:layout_y="127dp" />
<TextView
	android:id="@+id/widget34"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Confirm"
	android:layout_x="35dp"
	android:layout_y="209dp" />
<EditText
android:hint="Confirm Pin"
android:password="true"
	android:id="@+id/confirm"
	android:layout_width="152dp"
	android:layout_height="wrap_content"
	android:textSize="18sp"
	android:layout_x="131dp"
	android:layout_y="197dp" />
<TextView
	android:id="@+id/widget38"
	android:layout_width="87dp"
	android:layout_height="wrap_content"
	android:text="Change PIN"
	android:layout_x="124dp"
	android:layout_y="11dp" />
<TextView android:layout_width="wrap_content" 
android:id="@+id/textView1" 
android:layout_height="wrap_content" 
android:text="Current Pin" 
android:layout_x="40dp" 
android:layout_y="65dp"></TextView>
<EditText
android:hint="New Pin" 
android:password="true"
android:layout_width="144dp" 
android:textSize="18sp" 
android:layout_height="wrap_content" 
android:id="@+id/pin" 
android:layout_x="134dp" 
android:layout_y="122dp"></EditText>
<EditText
android:hint="Current Pin"
android:password="true" 
android:layout_height="wrap_content" android:textSize="18sp" android:id="@+id/pinOld" android:layout_width="144dp" android:layout_x="136dp" android:layout_y="40dp"></EditText>
<ToggleButton android:id="@+id/toggleButton1" android:text="ToggleButton"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:checked="true"
	android:layout_x="134dp" android:layout_y="324dp"></ToggleButton>
<Button android:id="@+id/set" android:layout_width="90dp" android:text="SAVE" android:layout_height="wrap_content" android:layout_x="41dp" android:layout_y="323dp"></Button>
<Button android:id="@+id/cancel2" android:layout_width="97dp" android:text="Cancel" android:layout_height="wrap_content" android:layout_x="198dp" android:layout_y="322dp"></Button>
    
</AbsoluteLayout>
</ScrollView>