<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    
    >

    <EditText
    android:inputType="numberDecimal"
        android:id="@+id/editTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="1st Reading (Systolic)" 
        />
 <EditText
       android:inputType="numberDecimal"
        android:id="@+id/editTxt2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="2nd Reading (Diastolic)" 
        />
 <LinearLayout 
    android:layout_gravity="center" 
       android:gravity="center" 
 android:layout_height="match_parent" android:paddingLeft="70dp" android:orientation="horizontal" android:layout_width="match_parent">
     <Button
    android:enabled="false"
     android:id="@+id/btnsub" 
     android:layout_height="wrap_content" android:text="Continue" android:layout_width="wrap_content"></Button>
     <Button android:id="@+id/btnclose" android:layout_height="wrap_content" android:text="Cancel" android:layout_width="77dp"></Button>
 </LinearLayout>
</LinearLayout>