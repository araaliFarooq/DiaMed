<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  
  >
    <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/output" android:layout_width="wrap_content"></TextView>
    
    
   <LinearLayout 
   
   android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:layout_gravity="center"
   >
    <Button 
	android:layout_gravity="right"
	android:gravity="center"
	android:typeface="serif"
	android:width="90dp"
	android:text="Back" 
	android:id="@+id/tryButton"
    android:layout_width="wrap_content" 
    android:layout_height="40dp">
    </Button>
    <Button android:text="Listen" 	android:width="90dp" android:id="@+id/listen" android:layout_width="wrap_content" android:layout_height="40dp"></Button>
		
		<Button 
	android:layout_gravity="center"
	android:gravity="center"
	android:typeface="serif"
	android:width="90dp"
	android:text="Finish" android:id="@+id/exit"
		android:layout_width="wrap_content" android:layout_height="40dp"></Button>
		</LinearLayout> 
    
</LinearLayout>
