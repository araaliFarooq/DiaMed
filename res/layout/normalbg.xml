<?xml version="1.0" encoding="utf-8"?>

<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/ff"
>

<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <TextView android:text="@string/normal"

              android:textSize="25px"
              android:textStyle="bold"
              android:gravity="center"
              android:id="@+id/textView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:textColor="@android:color/black"
              >
    </TextView>

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="match_parent" 
     android:gravity="center_vertical"
     >
    </LinearLayout>
 
 <Button
     android:paddingRight="30px"
     android:id="@+id/listen"
     android:layout_width="100dp"
     android:layout_height="wrap_content"
     android:layout_x="174dp"
     android:layout_y="240dp"
     android:gravity="center"
     android:text="Audio"
     android:textColor="@android:color/black" />

 <Button
     android:id="@+id/back1"
     android:layout_width="100dp"
     android:layout_height="wrap_content"
     android:layout_x="18dp"
     android:layout_y="238dp"
     android:gravity="center"
     android:text="Finish" />

</AbsoluteLayout>
</ScrollView>