<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="match_parent" android:layout_width="match_parent">
    <LinearLayout
            android:id="@+id/LinearLayout01" android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingLeft="20sp"
            android:background="@drawable/bckgrnd"
            >
        <TextView android:id="@+id/button1_label"
                  android:layout_height="wrap_content" android:layout_width="wrap_content"
                  android:text="" android:textSize="20dp"></TextView>




        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:text="Disease:"
                  android:layout_gravity="center" android:textSize="14.5sp"
                  android:textColor="@android:color/black"/>
        <EditText android:id="@+id/name" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" />


        <TextView android:layout_width="fill_parent"
                  android:textColor="@android:color/black"
                  android:layout_height="wrap_content" android:text="Medication:"
                  android:layout_gravity="center" android:textSize="14.5sp" />
        <EditText android:id="@+id/skypeId" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" />
        <TextView android:layout_width="fill_parent"
                  android:textColor="@android:color/black"
                  android:layout_height="wrap_content" android:text="Prescription:"
                  android:layout_gravity="center" android:textSize="14.5sp" />
        <EditText android:id="@+id/address" android:layout_width="fill_parent"

                  android:layout_height="wrap_content" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Duration"
                android:id="@+id/durationText" android:layout_gravity="left|center_vertical"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:ems="10"
                android:id="@+id/duration" android:layout_gravity="left|center_vertical"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Start Date"
                android:id="@+id/startDateText" android:layout_gravity="left|center_vertical"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/startdate"/>

        <LinearLayout android:id="@+id/LinearLayout02"
                      android:orientation="horizontal" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:paddingLeft="60dp">
            <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:enabled="false"
                    android:id="@+id/button01add"/>
            <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:id="@+id/button01home" android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>